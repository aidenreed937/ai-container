{
  "name": "AI Full-Stack Env",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20",
  "postCreateCommand": "sh .devcontainer/post-create.sh",
  "containerEnv": {
    "CODEX_API_KEY": "${localEnv:CODEX_API_KEY}",
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "GOOGLE_GEMINI_BASE_URL": "${localEnv:GOOGLE_GEMINI_BASE_URL}",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "ANTHROPIC_BASE_URL": "${localEnv:ANTHROPIC_BASE_URL}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "pkief.material-icon-theme"
      ]
    }
  },
  "forwardPorts": [3000],
  "remoteUser": "node",
  "mounts": [
    "source=${localWorkspaceFolder}/.codex,target=/home/node/.codex,type=bind",
    "source=${localWorkspaceFolder}/.gemini,target=/home/node/.gemini,type=bind",
    "source=${localWorkspaceFolder}/.claude,target=/home/node/.claude,type=bind"
  ]
}
